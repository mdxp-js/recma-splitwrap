{
    "name": "recma-splitwrap",
    "version": "0.1.0",
    "description": "Split MDX files on a certain component and wrap the splits",
    "license": "MIT",
    "author": "0phoff <0phoff@users.noreply.github.com>",
    "keywords": [
        "mdx",
        "markdown",
        "jsx",
        "esast",
        "recma",
        "mdxp"
    ],
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist/**/*.js",
        "dist/index.d.ts"
    ],
    "scripts": {
        "build": "tsc",
        "prepack": "npm run build",
        "test-api": "tsx node_modules/uvu/bin.js test index.ts",
        "test-cov": "c8 --check-coverage --90 --reporter lcov pnpm run test-api",
        "test": "pnpm run build && pnpm run test-cov"
    },
    "devDependencies": {
        "@mdx-js/mdx": "^2.1.2",
        "@types/node": "^18.0.1",
        "c8": "^7.11.3",
        "tsx": "^3.7.1",
        "typescript": "^4.7.4",
        "uvu": "^0.5.6"
    },
    "dependencies": {
        "@types/estree-jsx": "^0.0.2",
        "estree-walker": "^3.0.1",
        "unified": "^10.1.2",
        "unist-util-find": "^1.0.2"
    }
}
